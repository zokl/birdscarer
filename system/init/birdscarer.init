#!/bin/sh /etc/rc.common

START=99
USE_PROCD=1
NAME=birdscarer
PROG=/usr/sbin/$NAME
CFG_FILENAME=$NAME

start_service() {
	procd_open_instance
	procd_set_param command "$PROG"
	procd_set_param stdout 1
	procd_set_param respawn
	procd_close_instance
}

stop() {
	service_stop "$PROG"
}

reload_service()
{
	stop
	start
}
